<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_search_history"
        android:layout_width="399dp"
        android:layout_height="355dp"
        android:layout_marginTop="5dp"
        android:text="검색 기록"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_translate"
        android:layout_width="396dp"
        android:layout_height="356dp"
        android:layout_marginTop="4dp"
        android:text="번역하기"
        app:layout_constraintEnd_toEndOf="@+id/btn_search_history"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_search_history"
        app:layout_constraintTop_toBottomOf="@+id/btn_search_history" />
</androidx.constraintlayout.widget.ConstraintLayout>